<div class="container py-5">
 <%= link_to 'add category',new_category_path,class:"btn btn-sm btn-success float-right" %>
    <div class="row">

        <%= form_with model: @blog do |form| %>
        <% if @blog.errors.any? %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">

            <% @blog.errors.full_messages.each do |message| %>
            <p> <%= message %></p>
            <% end %>

            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <% end %>

               
        <div class="form-group">
            <%= form.text_field :written_by, placeholder: "Your good name please", class:"form-control" %>
        </div>
        <div class="form-group">
            <%= form.text_field :job_title, placeholder: "Job Position", class:"form-control" %>
        </div>
        <div class="form-group">
            <%= form.file_field :profile_pic, placeholder:"Your Profile picture"%>
        </div>
        <div class="form-group">
            <%= form.text_field :title, placeholder: "Title", class:"form-control" %>
        </div>
        <div class="form-group">
        <%= form.select :category_id, Category.all.map {|c| [c.categories, c.id]} %>
         </div>
       
        <%# <div class="form-group">
            <%= form.text_area :description,:size => "24x8", placeholder: "Description", class:"form-control" %>
        <%# </div> %>
        <div class="field">
            <%= form.rich_text_area :content %>
        </div>
        <br>
        <%= form.submit class:"btn btn-success" %>
        <% end %>
    </div>
</div>