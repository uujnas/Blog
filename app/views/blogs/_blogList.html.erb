<div class="spacing" ></div>

        <% @blog.each do |f| %>
        <div class="box mb-3 p-3">
            <div class="card-body">
                <h4> <%= f.title %></h4>
                <p class="card-text"> <%= image_tag(f.profile_pic,class:"p_image") if f.profile_pic.attached?%> <%= f.written_by %>
                    (<%= f.job_title %>)<%= f.created_at.strftime("%B %d %Y") %></p>
                    <%= f.content %>
                   

                <p class="card-text">
                        
                          <% if user_signed_in? %>
                          <%= link_to blog_path(f) do %><i class="fas fa-eye text-success"></i><% end %>
                        <%= link_to  edit_blog_path(f) do %><i class="fas fa-pencil-alt text-primary"></i><% end %>
                        <%= link_to  blog_path(f),method: :delete, data:{confirm:"Are you sure you want to delete '#{f.title}?'"} do %>
                        <i class="fas fa-trash-alt text-danger"></i><% end %>
                        <% else %>
                         <%= link_to blog_path(f) do %><i class="fas fa-eye text-success"></i>
                         <% end %>
                         <% end %>
                </p>
            </div>
        </div>




