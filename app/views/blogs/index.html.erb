<div class="container">
<div class="row">
<div class="col-md-12">


            <h4> Blogs </h4>
            <%= link_to 'Add blog', new_blog_path%>
            <% @blog.each do |f| %>
            <p><%= f.written_by %></p> 
            <p><%= f.job_title %></p> 
            <p><%= f.title %></p>
            <%= f.description %>
            <%= link_to 'Show', blog_path(f) %>   
            <%= link_to 'edit', edit_blog_path(f) %>   
            <%= link_to 'delete', blog_path(f),method: :delete, data:{confirm:"Are you sure you want to delete #{f.title}?"} %>   
    

<% end %>
</div>

</div>

</div>
      
  





