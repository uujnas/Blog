<style>
    .p_image {
        width: 30px;
        height: auto;
        border-radius: 50%;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-3 recent-article">
            <h6 class="heading py-2">Recent Articles</h4>
                <% @blog.each do |f| %>
                <p> <%= f.title %></p>

                <p> <%= image_tag(f.profile_pic,class:"p_image") if f.profile_pic.attached?%>

                    <%= f.written_by %>(<%= f.created_at.strftime("%B %d %Y") %>)</p>
                <hr />

                <% end %>
        </div>
        <div class="col-md-9">
        <div class="row">
        <div class="col-md-6">
        <%= search_form_for @q do |f| %>
           <%= f.search_field :title_cont, class:"py-1 search" %> 
           <%= f.submit class:"btn btn-outline-success " %>

           
            <% end %>
        
        </div>
        <div class="col-md-6">
         <%= link_to 'add new ', new_blog_path, class:"btn btn-outline-info float-right "%>
         </div>
        </div>
            

            <%= render 'blogs/blogList' %>

        </div>

    </div>

</div>